<h1><%= t ".all_attendion_members" %> </h1>

<table class = "table">
  <tr>
    <th></th>
    <th><%= t ".name" %></th>
    <th><%= t ".email" %></th>
    <th></th>
  </tr>

  <% @users.each do |user| %>

      <tr>
          <td width="20%"><%= image_tag user.avatar.url, width: '10%' if user.avatar.present?%></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%=  button_to(t(".show_href"), user_path(user), :class => 'navbar-link') %><td>
      </tr>

  <% end %>

</table>