<!DOCTYPE html>
<html>
  <head>
    <title>Attendion</title>
    <%= csrf_meta_tags %>
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track'=> 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track'=> 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/"><%= image_tag("a.gif", :alt => "rss feed") %></a>
      </div>
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>


            <li><%=  link_to(t(".new_event_href"), new_event_path) %></li>
            <li><%=  link_to(t(".my_Profile_href"), user_path(current_user)) %></li>
            <li><%=  link_to(t(".users_href"), users_index_path ) %></li>
            <li><%=  link_to(t(".events_href"), events_all_path) %></li>

          <% else %>

            <li><%=  link_to(t(".signup_href"), new_user_registration_path) %></li>
            <li><%=  link_to(t(".login_href"), new_user_session_path) %></li>

        <% end %>

          <li><%=  link_to(t(".help_href"), static_pages_help_path) %></li>
          <li><%=  link_to(t(".imprint_href"), static_pages_impressum_path) %></li>
          <li><%=  link_to(t(".privacy_href"), static_pages_privacy_path) %></li>

          <%= render 'layouts/navigation' %>

        </ul>
      </div>
    </div>
    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        <%if current_user.name.present? %>
              <%= t ".logged_in_as" %> <strong><%= current_user.name %></strong> |
          <%=  link_to(t(".logout_href"), destroy_user_session_path, method: :delete, :class => 'navbar-link') %>

    <% else %>
         <%= t ".logged_in_as" %><strong><%= current_user.email %></strong>.
      <% end %>
        <% end %>
    </p>
  </nav>
    <div class="container">
    <%= yield %>
    </div>
  </body>
</html>
