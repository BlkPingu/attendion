 <div class="col-md-2">
    <strong><%= t "events.event.date" %></strong>
    <%= @event.date %>
  </div>

  <% if @event.time? %>
  <div class="col-md-2">
    <strong><%= t "events.event.time" %></strong>
    <%= @event.try(:time).try(:strftime, '%H:%M') %>
  </div>
  <% end %>

  <% if @event.location? %>
  <div class="col-md-2">
    <strong><%= t "events.event.location" %></strong>
    <%= @event.location %>
  </div>
  <% end %>

  <% if @event.url? %>
  <div class="col-md-4">
    <strong><%= t "events.event.URL" %></strong>
    <%= @event.url %>
  </div>
  <% end %>

   <div class="col-md-4">
     <strong><%= t "events.event.admin" %></strong>
     <% if User.find(@event.user_id).name? %>
       <%= link_to User.find(@event.user_id).name, user_path(User.find(@event.user_id)), :class => 'navbar-link' %>
     <% else %>
       <%= link_to 'Anonymous', user_path(User.find(@event.user_id)), :class => 'navbar-link' %>
   <% end %>
   </div>

<p><br>
  <div class="col-md-4">
    <strong><%= t "events.event.description" %></strong>
    <% if @event.description? %>
    <%= @event.description %>
    <% else %>
      <%= t "events.event.no_description" %>
    <% end %>
  </div>