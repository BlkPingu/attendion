<div class="row">
<div class="col-md-4">
  <strong>Title:</strong>
  <%= event.title %>
</div>

<div class="col-md-4">
  <strong><%= t :title %></strong>
  <%= event.date %>
</div>

<div class="col-md-4">

  <strong>Time:</strong>
  <%= event.try(:time).try(:strftime, '%H:%M') %>
</div>

<div class="col-md-4">
  <strong><%= t :location %></strong>
  <%= event.location %>
</div>

<div class="col-md-4">
  <strong><%= t :url %></strong>
  <%= event.url %>
</div></div>
<div class="row">
<div class="col-md-4">
  <strong><%= t :description %></strong>
  <%= event.description %>
</div></div>

<p>
  <%= link_to 'Destroy Event', [event.user, event],
              method: :delete,
              data: { confirm: 'Are you sure?' }, :class => 'navbar-link' %>
</p>